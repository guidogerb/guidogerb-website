{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Self Review Schema",
  "type": "object",
  "properties": {
    "project": { "type": "string" },
    "version": { "type": "string" },
    "defaults": {
      "type": "object",
      "properties": {
        "mustPassAll": { "type": "boolean" },
        "failOnPhase2InMVP": { "type": "boolean" }
      },
      "additionalProperties": true
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "severity", "description"],
        "properties": {
          "id": { "type": "string" },
          "severity": { "type": "string", "enum": ["error", "warn"] },
          "description": { "type": "string" },
          "message": { "type": "string" },
          "mustIncludeAll": { "type": "array", "items": { "type": "string" } },
          "mustIncludeAny": { "type": "array", "items": { "type": "string" } },
          "mustNotIncludeAny": { "type": "array", "items": { "type": "string" } },
          "ifMentionsAny": { "type": "array", "items": { "type": "string" } },
          "thenMustAlsoIncludeAny": { "type": "array", "items": { "type": "string" } }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["project", "version", "rules"],
  "additionalProperties": false
}
