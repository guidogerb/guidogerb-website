{
  "name": "guidogerb-website",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "@guidogerb/components/ai-support",
    "@guidogerb/components/analytics",
    "@guidogerb/components/api-client",
    "@guidogerb/components/app",
    "@guidogerb/components/auth",
    "@guidogerb/components/catalog",
    "@guidogerb/components/menu",
    "@guidogerb/components/pages/*",
    "@guidogerb/components/point-of-sale",
    "@guidogerb/components/router/*",
    "@guidogerb/components/shopping-cart",
    "@guidogerb/components/storage",
    "@guidogerb/components/sw",
    "@guidogerb/components/ui",
    "@guidogerb/config",
    "@guidogerb/css",
    "@guidogerb/enums",
    "@guidogerb/footer",
    "@guidogerb/header",
    "@guidogerb/hooks",
    "@guidogerb/util",
    "websites/garygerber.com",
    "websites/ggp.llc",
    "websites/guidogerbpublishing.com",
    "websites/picklecheeze.com",
    "websites/stream4cloud.com",
    "websites/this-is-my-story.org"
  ],
  "scripts": {
    "clean": "rimraf --glob \"node_modules\" \"@guidogerb/**/node_modules\" \"websites/**/node_modules\" \"@guidogerb/**/dist\" \"websites/**/dist\" \"pnpm-lock.yaml\" \"package-lock.json\" \"yarn.lock\" \"npm-shrinkwrap.json\" \"**/pnpm-lock.yaml\" \"**/package-lock.json\" \"**/yarn.lock\" \"**/npm-shrinkwrap.json\"",
    "cleani": "pnpm run clean && pnpm install && pnpm run format",
    "build": "pnpm -r build",
    "cleanr": "pnpm run cleani && pnpm run build",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "build:site:guidogerbpublishing": "pnpm --filter websites-guidogerbpublishing build",
    "build:site:stream4cloud": "pnpm --filter websites-stream4cloud build",
    "build:site:garygerber": "pnpm --filter websites-garygerber build",
    "build:site:picklecheeze": "pnpm --filter websites-picklecheeze build",
    "build:site:this-is-my-story": "pnpm --filter websites-this-is-my-story build",
    "build:site:ggp-llc": "pnpm --filter websites-ggp-llc build",
    "dev:site:stream4cloud": "pnpm --filter websites-stream4cloud dev",
    "dev:site:garygerber": "pnpm --filter websites-garygerber dev",
    "dev:site:guidogerbpublishing": "pnpm --filter websites-guidogerbpublishing dev",
    "dev:site:picklecheeze": "pnpm --filter websites-picklecheeze dev",
    "dev:site:this-is-my-story": "pnpm --filter websites-this-is-my-story dev",
    "dev:site:ggp-llc": "pnpm --filter websites-ggp-llc dev",
    "ci:deploy:main": "pnpm -r build",
    "ci:deploy:prod": "pnpm -r build && pnpm -r lint",
    "ai:check": "node .aiassistant/validate.mjs .aiassistant/.ai-self-review.json",
    "ai:check:readme": "node .aiassistant/validate.mjs .aiassistant/.ai-self-review.json README.md",
    "ai:check:spec": "node .aiassistant/validate.mjs .aiassistant/.ai-self-review.json SPEC.md",
    "ai:check:publishing": "node .aiassistant/validate.mjs .aiassistant/.ai-self-review.json PUBLISHING.md",
    "ai:check:tasks": "node .aiassistant/validate.mjs .aiassistant/.ai-self-review.json TASKS.md",
    "format": "prettier -w .",
    "format:check": "prettier -c ."
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.35.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "vitest": "^3.2.4"
  }
}
