{
  "name": "guidogerb-website",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "@guidogerb/components/api",
    "@guidogerb/components/pages/*",
    "@guidogerb/components/router/*",
    "@guidogerb/css",
    "@guidogerb/footer",
    "@guidogerb/header",
    "website"
  ],
  "scripts": {
    "clean": "rimraf --glob \"node_modules\" \"@guidogerb/**/node_modules\" \"dist\"  \"@guidogerb/**/dist\"",
    "build:modules": "npm run -ws --if-present build",
    "build": "npm run clean && npm run build:modules"
  },
  "devDependencies": {
    "rimraf": "^6.0.1"
  }

}
